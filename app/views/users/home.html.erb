<body>
  <div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item slides active">
        <div class="slide-1"></div>
        <div class="hero">
          <hgroup>
            <h1>Woke</h1>
          </hgroup>
        </div>
      </div>
    </div>
  </div>

  <!-- Overlay -->
  <nav class="navbar">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <b><%= link_to 'Woke', root_path, class: "navbar-brand" %></b>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% Topic.all.sort.each do |t| %>
          <% if t.name != "Home" %>
          <li><%= link_to t.name, t, class:"black" %></li>
          <% end %>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
          <li class="current_user_name navbar-right"><%= link_to 'Log Out', logout_path, class:"black" %></li>
          <li><%= link_to 'Dashboard', dashboard_path, class:"black" %><li>
            <% else %>
            <li><%= link_to 'Log In', login_path, class:"black" %></li>
            <li><%= link_to 'Sign Up', signup_path, class:"black" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>

    <!-- Youtube -->
       <div class="youtube">
         <div id="youtubes">
           <ul>

           </ul>
         </div>
       </div>

      <!-- Headliners -->
      <div class="headliners col-xs-12 col-sm-12 col-md-12">
        <% Story.where(story_type: "RS").limit(20).each do |n| %>
        <div class='story_container' id="rss_home">
          <%= n.body.html_safe %>
        </div>
        <%end%>
      </div>
  </body>
