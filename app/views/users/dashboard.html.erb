<body class="dashboard_layout">
  <p>ADMIN DASHBOARD</p>
<%= form_tag '/dashboard', :method => :get do %>
  <%= search_field_tag :term %>
  <%= submit_tag "Go!" %>
<% end %>
<%= params[:term] %>
<h2>Search Results</h2>
<% if @result %>
  <%= @result.name %>
<% else %>
  Try your search again.
<% end %>


  <div class="container">

    <div class="tweets col-md-3" >
      <div class="title">
        <p>Twitter Feed</p>
      </div>

      <div class="well well-lg">
        <% Soc_med.last(20).each do |sm| %>
        <div class="dash_tweets handle" storyType="TW" tID="<%= sm.t_id %>" tweetersID="<%= sm.tweeters_id %>">
          <blockquote class="twitter-tweet" data-link-color="#55acee" lang="en">
            <a href="https://twitter.com/<%=sm.tweeters_id%>/status/<%=sm.t_id%>">
            </a>
          </blockquote>
        </div>
        <% end %>
      </div>
    </div>

    <div class="youtube col-md-3" >
      <div class="title">
        <p>YouTube Feed</p>
      </div>

      <div class="well well-lg">
        <ul>

        </ul>
      </div>
    </div>

    <div class="rssfeed col-md-3">
      <div class="title">
        <h1>RSS Feed</h1>
      </div>
      <div class="well well-lg">
        <% @news_rsses.last(20).each do |news| %>
        <div class='story_container'>
          <div class='media'>
            <div class='media-body'>
              <h2 class='media-heading'><a href='<%=news.url%>'><%=news.headline%></a></h2>
                <p>VIA *NEED SOURCE* <%=news.pub_date %></p>
              </div>
              <div class='media-left'>
                <a href='#{news[:url]}'><img class='media-object' src='https://hd.unsplash.com/photo-1453227588063-bb302b62f50b'></a>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>

    <div class="col-md-3">
      <div class="title">
        <h1>Topic Title</h1>
      </div>

      <div class="well well-md">

        <div id="topic" data-topic-url="<%= sort_topics_path %>">
          <% @topics.each do |t| %>
            <div class='story_container'>
              <p class="word-wrapping topicID" id="topic_<%= t.id %>" data-topicID="<%= t.id %>" style="padding:5px 0;">
                <%= link_to t.name, t %>
                <%= link_to 'X', topic_path(t), method: :delete, class: 'btn btn-danger btn-xs' %>
              </p>
            </div>
          <% end %>
        </div>

        <div class="new_topic">
          <%= form_for(@topic, remote: true, url: 'topics/new') do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit 'New Topic', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>

      </div>
    </div>

</div>

<%= form_for @rss_feed do |f| %>
<div class="field">
  <%= f.label :url %><br>
  <%= f.text_field :url %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

</body>
