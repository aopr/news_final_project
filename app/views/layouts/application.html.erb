<!DOCTYPE html>
<html>
<head>
  <title>NewsFinalProject</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Mono:400,500' rel='stylesheet' type='text/css'>
    <!-- Latest compiled and minified CSS -->

  <!--google LATO font  -->
  <link href='https://fonts.googleapis.com/css?family=Lato:700' rel='stylesheet' type='text/css'>
  <!--google Meriiweather font  -->
  <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
  <!-- <link href='https://fonts.googleapis.com/css?family=PT+Sans:700' rel='stylesheet' type='text/css'> -->

  <!-- Optional theme -->
  <script src="https://apis.google.com/js/client.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% unless (controller_name == "users") and (controller.action_name == "home") %>
  <nav class="navbar">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <b><%= link_to 'Woke', root_path, class: "navbar-brand" %></b>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% Topic.all.sort.each do |t| %>
            <% if t.name != "Home" %>
              <li><%= link_to t.name, t, class:"black" %></li>
            <% end %>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li class="current_user_name navbar-right"><%= link_to 'Log Out', logout_path, class:"black" %></li>
            <li><%= link_to 'Dashboard', dashboard_path, class:"black" %><li>
          <% else %>
            <li><%= link_to 'Log In', login_path, class:"black" %></li>
            <li><%= link_to 'Sign Up', signup_path, class:"black" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <% end %>
  <%= yield %>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
</body>
</html>
