<div class="Login-form">
  <div class="title">
    <h1>Login</h1>
  </div>

    <%= form_tag '/login' do |f| %>
    <div class="field">
      <p>
        Email
      </p>
        <p>
          <%= text_field_tag :email %>
        </p>

      <p>
        Password
      </p>
          <p>
          <%= password_field_tag :password %>
          </p>
      <div class="actions">
        <p>
          <%= submit_tag "Submit", class: 'btn btn-outline-info' %>
        </p>
      </div>

      <p>
        Not a Member? <%= link_to 'Sign Up', signup_path %>
      </p>

    <% end %>
  </div>
</div>
