
<body>

<h1>Editor's Dashbsoard</h1>

<div class="feed">
<h3>RSS Stories</h3>
<ul>
    <% x = Story.all%>
    <% x.each do |story| %>
    <li  class="story"><%= p story.body %></li>
    <% end %>
</ul>
</div>

<div class="feed">
  <h3>Top Tweets</h3>
  <ul>
    <li class="story">
      <% y = Story.last%>
      <%= y.body %>
    </li>
  </ul>
</div>

<div class="feed">
  <h3>Top Videos</h3>
  <ul>
    <li  class="story">
      <% z = Story.find(3)%>
      <%= z.body %>
    </li>
  </ul>
</div>

<div class="trending">
  <h3>Trending Topics</h3>
  <ul>
    <li  class="topic">
      <% a = Topic.find(2)%>
      <%= a.name %>
      <!-- <%#= render @topics %> -->
    </li>
  </ul>
</div>

<div>
  <h2>New Topic</h2>
<%= render 'topics/form' %>
</div>

</body>
